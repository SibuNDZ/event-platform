# ==============================================
# Event Platform API - Environment Variables
# ==============================================
# Copy this file to .env and fill in your values

# Database (PostgreSQL)
# For Railway: Use the DATABASE_URL provided by Railway Postgres plugin
DATABASE_URL="postgresql://user:password@host:5432/database?schema=public"
DIRECT_URL="postgresql://user:password@host:5432/database?schema=public"

# Redis
# For Railway: Use the REDIS_URL provided by Railway Redis plugin
REDIS_URL="redis://localhost:6379"

# JWT Authentication
# IMPORTANT: Generate secure secrets for production!
# Use: openssl rand -base64 32
JWT_SECRET="your-super-secret-jwt-key-min-32-chars"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-min-32-chars"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Application
NODE_ENV="production"
API_PORT=3001
FRONTEND_URL="https://your-frontend-domain.vercel.app"

# CORS (comma-separated origins)
CORS_ORIGINS="https://your-frontend-domain.vercel.app"

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# Email (Resend)
RESEND_API_KEY=""
EMAIL_FROM="noreply@yourdomain.com"

# Stripe (Payments)
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""

# AWS S3 (File Storage)
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_S3_BUCKET=""

# Sentry (Error Tracking - Optional)
SENTRY_DSN=""

# Logging
LOG_LEVEL="info"
